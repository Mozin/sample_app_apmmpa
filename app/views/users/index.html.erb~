<% provide(:title,'All users') %>
<h1>
All users
</h1>
<ul class="users">
<% @users.each do |user|%>
  <li>
  <%= link_to user.name ,user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete",user,:method=>:delete,:confirm=> "You sure?" %> | 
    <% if user.live_status? %>
      <%= link_to "kill",change_user_path(current_user) ,:method=> :put,:confirm=> "You sure?" %>
    <% end %>
  <% end %>
  </li>
<% end %>
</ul>


