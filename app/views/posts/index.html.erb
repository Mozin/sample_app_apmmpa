<% if signed_in? %>	
  <ul id="mafia_mohsin_akshay_gavit_chat">
  <% @posts.each do |post|%>
  <% if post.place=="game_post" %>
  <li>
    <%= post.user.fake_name %>
    <%= post.content %>
    </li>
  <% end %>
  <% end %>

  </ul>


<%= form_for @post,:remote=>true,:html => { :id => "mafia_mohsin_akshay_gavit_game_form" },:url=> {:action=> :create} do |f| %>
  <div class="field">
    <%= f.text_area :content,:rows=>3, :placeholder=> "compose new post..." %>
  </div>
  <div id="game_post">
  <script>
  function myFunction()
  {
    document.getElementById("game_post").innerHTML='<%= f.hidden_field :place, :value=> "game_post"  %>';
  }
  </script>    
  </div>
  <%=f.submit "post",:class=>"btn btn-large btn-primary" ,:onclick=> 'myFunction();' %>
<% end %>

